<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    >

  <androidx.cardview.widget.CardView
      android:id="@+id/item_excerpt_cardview"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="12dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="12dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:cardCornerRadius="8dp"
      app:cardElevation="0dp"
      >
    <ImageView
        android:id="@+id/item_excerpt_imageview"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:background="@color/colorGray56"
        />
  </androidx.cardview.widget.CardView>


  <TextView
      android:id="@+id/item_excerpt_title_textview"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="16dp"
      android:maxLines="3"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/item_excerpt_cardview"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Automatic SMS Verification with SMS User Consent"
      />

  <TextView
      android:id="@+id/item_excerpt_description_textview"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="1dp"
      android:maxLines="30"
      android:textSize="10sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/item_excerpt_cardview"
      app:layout_constraintTop_toBottomOf="@+id/item_excerpt_title_textview"
      tools:text="Hier steht die Beschreibung"
      />

</androidx.constraintlayout.widget.ConstraintLayout>