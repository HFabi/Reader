<resources>

  <style name="BaseAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:statusBarColor">@color/colorAlto</item>
  </style>

  <style name="AppTheme" parent="BaseAppTheme">
    <!-- override -->
  </style>

  <style name="Reader">

  </style>

  <style name="Reader.Toolbar" parent="Widget.MaterialComponents.Toolbar">
    <item name="android:background">@color/colorBackground</item>
    <item name="android:elevation">0dp</item>
  </style>

  <style name="Reader.Toolbar.White">
    <item name="android:background">@color/colorBackground</item>
  </style>


  <style name="Reader.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

  </style>

  <style name="Reader.TextInputEditText" parent="Base.Widget.MaterialComponents.TextInputEditText">

  </style>


  <!-- titles -->
  <style name="Reader.Title1">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Reader.Title2">
    <item name="android:textSize">@dimen/fontsize_title_2</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Reader.Title3">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="Reader.Title4">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/fontsize_title_4</item>
    <item name="android:textAllCaps">false</item>
  </style>


  <!-- buttons -->
  <style name="Reader.Button">

  </style>

  <style name="Reader.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">

  </style>


  <!-- chips -->
  <style name="Reader.Chip" parent="Widget.MaterialComponents.Chip.Action">

  </style>

  <style name="Reader.FilterChip" parent="Widget.MaterialComponents.Chip.Filter">

  </style>

</resources>
