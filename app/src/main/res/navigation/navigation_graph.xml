<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/dashboardFragment">

  <fragment
      android:id="@+id/dashboardFragment"
      android:name="com.example.lenovo.reader.fragments.dashboard.DashboardFragment"
      android:label="DashboardFragment"
      tools:layout="@layout/fragment_dashboard">
    <action
        android:id="@+id/action_dashboardFragment_to_articleFragment"
        app:destination="@id/articleFragment">
    </action>
    <action
        android:id="@+id/action_dashboardFragment_to_addArticleFragment"
        app:destination="@id/addArticleFragment"
        app:popUpTo="@id/dashboardFragment"/>
    <action
        android:id="@+id/action_dashboardFragment_to_searchFragment"
        app:destination="@id/searchFragment"
        app:enterAnim="@anim/slide_up"
        app:exitAnim="@anim/slide_down"/>
    <action
        android:id="@+id/action_dashboardFragment_to_settingsFragment"
        app:destination="@id/settingsFragment"/>
    <action
        android:id="@+id/action_dashboardFragment_to_aboutFragment2"
        app:destination="@id/aboutFragment"/>
  </fragment>
  <fragment
      android:id="@+id/addArticleFragment"
      android:name="com.example.lenovo.reader.fragments.addarticle.AddArticleFragment"
      android:label="AddArticleFragment"
      tools:layout="@layout/fragment_add_article"/>
  <fragment
      android:id="@+id/settingsFragment"
      android:name="com.example.lenovo.reader.fragments.settings.SettingsFragment"
      android:label="SettingsFragment"
      tools:layout="@layout/fragment_settings"/>
  <fragment
      android:id="@+id/searchFragment"
      android:name="com.example.lenovo.reader.fragments.search.SearchFragment"
      android:label="SearchFragment"
      tools:layout="@layout/fragment_search"/>
  <fragment
      android:id="@+id/aboutFragment"
      android:name="com.example.lenovo.reader.fragments.about.AboutFragment"
      android:label="AboutFragment"
      tools:layout="@layout/fragment_about"/>
  <fragment
      android:id="@+id/articleFragment"
      android:name="com.example.lenovo.reader.fragments.article.ArticleFragment"
      android:label="ArticleFragment"
      tools:layout="@layout/fragment_article">
    <argument
        android:name="articleId"
        android:defaultValue="0"
        app:argType="integer"
        />
  </fragment>
  <fragment
      android:id="@+id/articleListFragment"
      android:name="com.example.lenovo.reader.fragments.articlelist.ArticleListFragment"
      android:label="ArticleListFragment"
      tools:layout="@layout/fragment_article_list">
    <action
        android:id="@+id/action_articleListFragment_to_searchFragment"
        app:destination="@id/searchFragment"/>
  </fragment>
</navigation>